<div class="photo_view">
  <div class="d-flex flex-wrap bd-highlight">
    <% photos.each do |photo| %>
      <div class="card mr-2 mt-2" style="width: 12rem;">
        <div class="p-1 flex-fill bd-highlight">
          <%= link_to photo_path(photo.id) do %>
            <%= attachment_image_tag photo, :image,:fill,170,140, class: "card-img-top rounded" %>
          <% end %>
        </div>
        <div class="card-body">
          <p class="card-title">
            <%= link_to user_path(photo.user) do %>
              <%= photo.user.couple_name %>
            <% end %>
            | <i class="fas fa-heart heart_red"><%= photo.likes.count %></i>
          </p>
          <p class="card-text"><%= photo.title %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>