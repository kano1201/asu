<div class="container">
  <div class="card-deck">
    <% photos.each do |photo| %>
      <div class="card col-md-3 p-1 m-1" style="width: 18rem;">
        <div>
          <%= link_to photo_path(photo.id) do %>
            <%= attachment_image_tag photo, :image, class: "card-img-top rounded" %>
          <% end %>
        </div>
        <div class="card-body">
          <p class="card-title">
            <%= link_to user_path(photo.user) do %>
              <%= photo.user.couple_name %>
            <% end %>
          </p>
          <p class="card-text"><%= photo.title %></p>
          <p class="card-text"><%= link_to "#{photo.comments.count}Comments", photo_path(photo.id) %></p>
          <i class="fas fa-heart heart_red"><%= photo.likes.count %></i>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate photos %>
</div>