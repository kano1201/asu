<div class="container mb-3">
 <div class="row d-flex justify-content-center">
  <h2>Post our love</h2>
  <%= render 'layouts/errors', obj: @photo %>
 </div>
 <div class="row mt-5 d-flex justify-content-center">
  <%= form_with model: @photo, local:true do |f| %>
   <div class="form_line">
    <%= f.attachment_field :image %>
   </div>
   <div class="form_line">
    <%= f.text_field :title, autofocus: true, class:"input-text form-js-input",placeholder: "Title" %>
   </div>
   <%= f.select :name, [['', 1],[@user.name, 2], [@user.partner_name, 3], [@user.name+'+'+@user.partner_name, 4]] %>
   <div class="cp_ipselect">
    <select class="cp_sl06" required>
     <option value="" hidden disabled selected></option>
     <option value="name"><%= @user.name %></option>
     <option value="partner_name"><%= @user.partner_name %></option>
     <option value="both_name"><%= @user.name %>+<%= @user.partner_name %></option>
    </select>
    <span class="cp_sl06_highlight"></span>
    <span class="cp_sl06_selectbar"></span>
    <label class="cp_sl06_selectlabel">Name</label>
   </div> <!--ここ適用させる-->
   <div class="form_line">
    <%= f.text_field :place, autofocus: true, class:"input-text form-js-input",placeholder: "Place" %>
   </div>
   <div class="form_box">
    <%= f.text_area :body, autofocus: true, class:"input-text form-js-input",placeholder: "Comment" %>
   </div>
   <div class="form_btn offset-10 mt-5">
    <%= f.submit 'Post',class:"btn btn-border" %>
   </div>
  <% end %>
 </div>
</div>