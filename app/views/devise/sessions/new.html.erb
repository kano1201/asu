<div class="container mt-5">

  <div class="row">
    <div class="col-xs-6 mx-auto"><h2>Login</h2></div>
  </div>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row mt-5">
      <div class="form_line col-8 mx-auto col-lg-5">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"input-text form-js-input",placeholder: "sample@email.com" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="form_line col-8 mx-auto col-lg-5">
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"input-text form-js-input" %>
      </div>
    </div>

    <div class="row mt-3">
      <% if devise_mapping.rememberable? %>
        <div class="col-8 mx-auto col-lg-5 form-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>

    <div class="row mt-3 mb-5 offset-md-8 form_btn">
      <%= f.submit "Log in",class:"btn btn-border" %>
    </div>
  <% end %>

  <div class="row mt-3">
    <div class="col-xs-6 mx-auto"><h6>-会員登録がお済みでない方-</h6></div>
  </div>

  <div class="row mt-2 mb-5">
    <div class="col-12 text-center"><%= render "devise/shared/links" %></div>
  </div>

</div>