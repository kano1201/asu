<%# if photo.favorited_by?(current_user) %>
  <%#= link_to photo_favorites_path(photo), method: :delete, class: "fas fa-bookmark heart_red" %>
<%# else %>
  <%#= link_to photo_favorites_path(photo), method: :post, class: "fas fa-bookmark heart_blue" %>
<%# end %>

<% if !Favorite.exists?(user_id: current_user.id, photo_id: photo.id) %>
  <%= link_to photo_favorites_path(photo), method: :post, remote: true do %>
    <i class="fas fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to photo_favorites_path(photo), method: :delete, remote: true do %>
    <i class="fas fa-bookmark"></i>
  <% end %>
<% end %>