<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-xs-12 col-lg-8 col-xl-9 mx-auto">
      <h5 class="mt-5 mt-lg-0 text-center">Favorites</h5>
        <div class="photo_view">
          <div class="d-flex flex-wrap bd-highlight">
            <% if @favorite.present? %>
              <% @favorite.each do |photo| %>
                <div class="card mr-2 mt-2" style="width: 12rem;">
                  <div class="p-1 flex-fill bd-highlight">
                    <%= link_to photo_path(photo.id) do %>
                      <%= attachment_image_tag photo, :image,:fill,170,140, class: "card-img-top rounded" %>
                    <% end %>
                  </div>
                  <div class="card-body">
                    <p class="card-title">
                      <%= link_to user_path(photo.user) do %>
                        <%= photo.user.couple_name %>
                      <% end %>
                    </p>
                    <p class="card-text">
                      <%= photo.title %>
                    </p>
                  </div>
                </div>
              <% end %>
              <%= paginate @photos %>
            <% else %>
              <p class="mt-3 mx-auto">お気に入りはありません</p>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>