<h4>Our info</h4>
<table class="table">
<tr><%= attachment_image_tag(user, :profile_image,:fill, 100, 100,fallback: "no_image.jpg", size: "100x100")%></tr>
<tr>
  <th><%= user.name %></th>
  <th><%= user.partner_name %></th>
</tr>
<tr>
  <th><%= user.anniversary %></th>
</tr>
<tr>
  <th><%= user.couple_name %></th>
</tr>
<tr>
  <th>Follows</th>
  <th><%= link_to user.followings.count, user_followings_path(user) %></th>
</tr>
<tr>
  <th>Followers</th>
  <th><%= link_to user.followers.count, user_followers_path(user) %></th>
</tr>
</table>

<div class='row'>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %>
    <% else %>
      <%= link_to "Follow", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
    <% end %>
  <% else %>
    <%= link_to '', edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
  <% end %>
</div>