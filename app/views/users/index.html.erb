<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-xs-12 col-lg-8 col-xl-9 mx-auto">
      <h5 class="mt-5 mt-lg-0 text-center">Users</h5>
<% @users.each do |user| %>
<div>
  <%= attachment_image_tag(user, :profile_image,width: '10%', height: '10%',fallback: "no_image.jpg")%>
  <%= link_to user.couple_name,user_path(user.id) %>
</div>
<% end %>

<h1>Happy Anniversary</h1>
<h5 class="mt-5 mt-lg-0 text-center">Users</h5>
<% @users.each do |user| %>
  <% if user.anniversary.month | user.anniversary.day == Date.today.month | Date.today.day %>
    <div>
      <%= attachment_image_tag(user, :profile_image,width: '10%', height: '10%',fallback: "no_image.jpg")%>
      <%= link_to user.couple_name,user_path(user.id) %>
    </div>
  <% end %>
<% end %>


    </div>
  </div>
</div>