<div class="col-xs-12 col-lg-8 col-xl-9 mx-auto mb-3">
  <h3 class="mypage-main mt-lg-0 text-center"><%= @user.couple_name %></h3>
</div>

<div class='container px-5 px-sm-0 mb-5 mt-4'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'info', user: @user %>

    <div class='weather mt-4'>
      <div class="weather-main"><h3>Today's Weather</h3></div>

        <input id="cityname" type="text" size="14" maxlength="14" placeholder="Tokyo">
        <button id="btn"><i class="fas fa-search"></i></button><br>
        <span>場所 :</span>
        <span id="place"></span><br>
        <span>最高気温 :</span>
        <span id="temp_max"></span>
        <span> ℃</span><br>
        <span>最低気温 :</span>
        <span id="temp_min"></span>
        <span> ℃</span><br>
        <span>湿度 :</span>
        <span id="humidity"></span>
        <span> %</span><br>
        <span>風速 :</span>
        <span id="speed"></span>
        <span> m/s</span><br>
        <span>天気 :</span>
        <span id="weather"></span>
        <div id="icon"><img id="wimg"></div>
        <script src="jquery.min.js"></script>
        <script src="script.js"></script>
      </div>
    </div>

    <div class="col-md-8">
      <h5 class="mt-5 mt-lg-0 text-center">Posts</h5>
      <div class="row mt-3 mb-5">
        <% @photos.each do |photo| %>
          <div class="col-md-2.5" style="margin-left: 60px;">
            <div class="row mt-3">
              <div class="col-md-12 text-left">
                <%= link_to photo_path(photo.id) do %>
                  <%= attachment_image_tag photo, :image,:fill, 200,150 , 'data-turbolinks': false%>
                <% end %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 text-left" style="margin-top: 20px;">
                <%= photo.title %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <%= paginate @photos %>
    </div>
  </div>
</div>