<h4 class="text-center"><%= @user.couple_name %></h4>
<div class='container px-5 px-sm-0 mb-5 mt-4'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'info', user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <% @photos.each do |photo| %>
      <div class="row">
        <%= link_to photo_path(photo.id) do %>
         <%= attachment_image_tag photo, :image,:fill, 200,150 %>
        <% end %>
      </div>
      <div class="row">
        <p><%= photo.title %></p>
      </div>
      <% end %>
    </div>
    <%= paginate @photos %>
  </div>

<div class='col-md-3 mt-4'>
<h3>Today's Weather</h3>
    <label>都市名：</label>
    <input id="cityname" type="text" size="14" maxlength="14" placeholder="Tokyo">
    <button id="btn">検索</button><br>
    <span>場所 :</span>
    <span id="place"></span><br>
    <span>最高気温 :</span>
    <span id="temp_max"></span>
    <span> ℃</span><br>
    <span>最低気温 :</span>
    <span id="temp_min"></span>
    <span> ℃</span><br>
    <span>湿度 :</span>
    <span id="humidity"></span>
    <span> %</span><br>
    <span>風速 :</span>
    <span id="speed"></span>
    <span> m/s</span><br>
    <span>天気 :</span>
    <span id="weather"></span>
    <div id="icon"><img id="wimg"></div>
    <script src="jquery.min.js"></script>
    <script src="script.js"></script>
</div>

  </div>